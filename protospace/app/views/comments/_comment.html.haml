.col-md-8
  .media
    .media-left
      = link_to image_tag("#{@prototype.user.avatar}", alt: "64x64", style: "width: 64px; height: 64px;", "data-holder-rendered" => "true", "data-src" => "holder.js/64x64", class: "media-object"), user_path(@prototype.user)
    .media-body
      %h4#top-aligned-media.media-heading
        = link_to "#{@prototype.user.name}", user_path(@prototype.user), class: "anchorjs-link"
      %p
        = comment.text
