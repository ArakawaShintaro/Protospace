- if user_signed_in?
  - if user_like.exists?(prototype_id: @prototype)
    = button_to unlike_path(@prototype) , method: :delete, class: "btn btn-default decrement-button", id: "like-button", remote: :true do
      = image_tag("icom_heart_red.svg")
      LIKE
      %span.num#like-sum
      = @prototype.likes.count
  - else
    = button_to like_path(@prototype), method: :post, class: "btn btn-default increment-button", id: "like-button", remote: :true do
      = image_tag("icon_heart.svg")
      LIKE
      %span.num#like-sum
      = @prototype.likes.count
- else
  %button.btn.btn-default.increment-button#like-button
    = link_to image_tag("icon_heart.svg"), new_user_session_path
    Like
    %span.num#like-sum
    = @prototype.likes.count
