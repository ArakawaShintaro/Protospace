%p{ id: "notice" }
= notice
.container.proto-page
  %header.row.user-nav
    .col-md-6
      .media
        .media-left
          = link_to image_tag("#{@prototype.user.avatar}", alt: "プロフィール写真", style: "width: 64px; height: 64px;", "data-holder-rendered" => "true", "data-src" => "holder.js/64x64", class: "media-object"), user_path(current_user)
        .media-body
          %h4#top-aligned-media.media-heading
            = @prototype.title
          .proto-user
            = link_to "by #{@prototype.user.name}", user_path(current_user)
            %span.degree
              = @prototype.user.member

    .col-md-6.text-right
      %button.btn.btn-default
        = image_tag("icon_heart.svg")
        Like
        %span.num 20
  .row
    .col-md-9
      = image_tag("#{@prototype.images.main.first.image}", class: 'img-responsive')
    .col-md-3
      %ul.proto-sub-list.list-group
      - @prototype.images.sub.each do |sub|
        %li.list-group-item
          = image_tag("#{sub.image}", class: 'img-responsive')
  .row.proto-description
    .col-md-3
      %h4 Catch Copy
      %p
        = @prototype.catchcopy
    .col-md-6
      %h4 Concept
      %p
        = @prototype.concept
    .col-md-3
      %h4 Tag List
      %ul.proto-tag-list.list-inline
        %li
          %a{:href => "#", class: "btn btn-default"} iPad
        %li
          %a{:href => "#", class: "btn btn-default"} wireframe
  .row.proto-comments
    %h4.col-md-12
      Comments
      %span.num (#{@prototype.comments.count})

    #comments
      = render partial: "comments/comment", collection: @prototype.comments

      = form_for [@prototype, @comment], class: "form-inline", role: "form", remote: true do |f|
        %h4 Write a comment
        .row
          .form-group.col-md-10
            = f.text_area :text, placeholder: "Your comments", rows: "3", class: "form-control", id: "comment-field"
          .form-group.col-md-2
            = f.submit "Comment", class: "btn btn-primary"
